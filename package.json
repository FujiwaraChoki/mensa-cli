{
  "name": "mensa-cli",
  "version": "0.2.0",
  "description": "Terminal chat interface for Claude AI with MCP support, session management, and agentic tools",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "mensa": "./dist/mensa"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun run src/index.tsx",
    "build": "bun build --compile --minify --sourcemap src/index.tsx --outfile dist/mensa",
    "prepublishOnly": "bun run build",
    "postinstall": "[ -f dist/mensa ] || bun run build || true"
  },
  "keywords": [
    "claude",
    "ai",
    "cli",
    "terminal",
    "chat",
    "anthropic",
    "mcp",
    "agent"
  ],
  "author": "FujiwaraChoki",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FujiwaraChoki/mensa-cli.git"
  },
  "bugs": {
    "url": "https://github.com/FujiwaraChoki/mensa-cli/issues"
  },
  "homepage": "https://github.com/FujiwaraChoki/mensa-cli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19.2.8",
    "typescript": "^5.7.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.9",
    "@inkjs/ui": "^2.0.0",
    "ink": "^6.6.0",
    "ink-spinner": "^5.0.0",
    "marked": "^17.0.1",
    "marked-terminal": "^7.3.0",
    "react": "^19.2.3",
    "react-devtools-core": "^7.0.1"
  }
}
